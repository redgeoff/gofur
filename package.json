{
  "name": "gofur",
  "version": "0.0.1",
  "description": "Utils for running JS tests in the browser",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/redgeoff/gofur"
  },
  "keywords": [
    "browser",
    "tests"
  ],
  "author": "Geoffrey Cox",
  "license": "Apache",
  "bugs": {
    "url": "https://github.com/redgeoff/gofur/issues"
  },
  "scripts": {
    "assert-beautified": "beautify-proj -i test -c beautify.json -e bundle.js && beautify-proj -i scripts -c beautify.json",
    "beautify": "beautify-proj -i test -o . -c beautify.json -e bundle.js && beautify-proj -i scripts -o . -c beautify.json",
    "jshint": "jshint -c .jshintrc test scripts",
    "node-test": "istanbul test --dir coverage/node ./node_modules/mocha/bin/_mocha test/index.js",
    "node-full-test": "npm run jshint && npm run node-test --coverage && istanbul check-coverage --lines 100 --function 100 --statements 100 --branches 100",
    "browser-server": "./scripts/browser/server.js -c ./example/cache -t ./example/tests.js",
    "browser-test": "./scripts/browser/test.js",
    "TODO-browser-test-firefox": "CLIENT=selenium:firefox npm run browser-test",
    "TODO-browser-test-chrome": "CLIENT=selenium:chrome npm run browser-test",
    "TODO-browser-test-phantomjs": "CLIENT=selenium:phantomjs npm run browser-test",
    "browser-coverage-server": "./scripts/browser-coverage/serve.js -c ./example/cache -t ./example/tests.js",
    "browser-coverage-test": "./scripts/browser-coverage/test.js -c ./example/cache -t ./example/tests.js",
    "browser-coverage-report": "istanbul report --dir ./example/cache/coverage/browser --root ./example/cache/coverage/browser lcov",
    "browser-coverage-check": "istanbul check-coverage --lines 100 --function 100 --statements 100 --branches 100 ./example/cache/coverage/browser/coverage.json",
    "browser-coverage-full-test": "npm run jshint && npm run browser-coverage-test && npm run browser-coverage-report && npm run browser-coverage-check",
    "test": "npm run assert-beautified && npm run node-full-test && npm run browser-coverage-full-test"
  },
  "dependencies": {
    "express": "^4.15.3",
    "minimist": "^1.2.0",
    "mkdirp-promise": "^5.0.1",
    "phantomjs-prebuilt": "^2.1.14"
  },
  "devDependencies": {
    "beautify-proj": "^1.0.0",
    "bluebird": "^3.5.0",
    "browserify": "^14.4.0",
    "browserify-istanbul": "^2.0.0",
    "chai": "^4.0.2",
    "chai-as-promised": "^6.0.0",
    "istanbul": "^0.4.5",
    "jshint": "^2.9.4",
    "mocha": "^3.4.2",
    "mocha-phantomjs": "^4.1.0",
    "request": "^2.81.0",
    "sauce-connect-launcher": "^1.2.2",
    "saucelabs": "^1.4.0",
    "selenium-standalone": "^6.5.0",
    "wd": "^1.2.0"
  }
}
